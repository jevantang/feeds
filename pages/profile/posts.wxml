<view class="page" data-weui-theme="{{ theme }}">
    <t-navbar title="{{ profile.detail.nickname }}">
        <view slot="capsule" class="custom-capsule">
            <t-icon size="20" bind:tap="onFresnsBack" aria-role="button" aria-label="返回" name="chevron-left" class="custom-capsule__icon"/>
            <t-icon size="20" bind:tap="onFresnsGoHome" aria-role="button" aria-label="首页" name="home" class="custom-capsule__icon"/>
        </view>
    </t-navbar>

    <profile-user user="{{ profile.detail }}" items="{{ profile.items }}" followersYouKnow="{{ profile.followersYouKnow }}"/>

    <!-- 列表 -->
    <view class="profile-list">
        <view class="post-list" wx:for="{{ posts }}" wx:for-item="post" wx:key="pid">
            <post post="{{ post }}" type="userList"></post>
        </view>
    </view>

    <!-- 加载动效 -->
    <loading status="{{ loadingStatus }}" tipType="{{ loadingTipType }}"></loading>

    <view class="weui-loadmore weui-loadmore_line tabbar-spacing">
        <text class="weui-loadmore__tips">Powered by Fresns</text>
    </view>
</view>
