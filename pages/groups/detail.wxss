.group-detail {
  background-color: var(--weui-BG-2);
}

.group-extensions {
  background-color: var(--weui-BG-2);
  padding-bottom: 40rpx;
  margin: 14rpx 0;
  border-top: 1rpx solid var(--weui-BG-0);
  border-bottom: 1rpx solid var(--weui-BG-0);
  display: flex;
  flex-wrap: wrap;
}

.extension-box {
  width: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 40rpx;
}

.extension-box navigator {
  text-align: center;
  font-size: 28rpx;
}

.extension-box .extension-icon {
  display: flex;
  justify-content: center;
  align-items: center;
}

.extension-box .extension-icon image {
  width: 60rpx;
  height: 60rpx;
}

.extension-box .extension-label {
  color: var(--weui-FG-0);
}

.list-tabs {
  display: flex;
  background-color: var(--weui-BG-2);
  border-bottom: 1rpx solid var(--weui-FG-3);
}

.list-tab_item {
  padding: 15rpx 0;
  margin: 0 40rpx;
}

.list-tabs .active {
  border-bottom: 4rpx solid var(--weui-INDIGO-100);
}
