.tree {
  display: flex;
  flex: 1;
}

.left-scroll {
  width: 220rpx;
  white-space: nowrap;
  background-color: var(--weui-BG-1);
}

.right-scroll {
  background-color: var(--weui-BG-2);
  padding-top: -20rpx;
}

.tree-list {
  padding: 30rpx 0;
  font-size: 26rpx;
}

.tree-list text {
  padding-left: 30rpx;
}

.action {
  background-color: var(--weui-BG-2);
}

.action text {
  padding-left: 24rpx;
  border-left: 6rpx solid var(--weui-BLUE-100);
}
