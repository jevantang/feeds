page {
  background-color: #f7f7f7;
}

.page {
  background-color: var(--weui-BG-1);
}

.weui-loadmore_line .weui-loadmore__tips {
  background-color: var(--weui-BG-1);
}

.weui-cells__group_form .weui-vcode-btn {
  color: var(--weui-LINK);
  font-weight: 400;
}

/* Tabbar */
.tabbar-spacing {
  margin-top: 3rem;
  padding-bottom: 4rem;
}

.weui-tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

/* Tab */
.tab-navbar {
  background-color: var(--weui-BG-2);
  box-shadow: 0px 0px 5px var(--weui-BG-0);
  position: -webkit-sticky;
  position: sticky;
  top: -1;
  z-index: 2048;
  text-align: center;
}

.weui-navbar {
  margin: 0 auto;
}

.weui-navbar:after {
  border-bottom: none;
}

.weui-navbar__item {
  padding: 0;
}

.weui-navbar__item navigator {
  color: var(--weui-FG-0);
  padding: 8px 0;
}

.weui-navbar__item:after {
  border-right: none;
}

.weui-navbar__item.weui-navbar__item_on {
  background-color: inherit;
  border-bottom: 3px solid var(--weui-BRAND);
}

/* Cell */
.cell-title .weui-cell__hd {
  color: var(--weui-INDIGO);
}

/* List */
.user-list {
  width: 100%;
  overflow: hidden;
  margin: 10px 0;
  background-color: var(--weui-BG-2);
}

.post-list .md-p {
  margin-block-start: 0.1em !important;
  margin-block-end: 0.1em !important;
}

.comment-list .md-p {
  margin-block-start: 0.1em !important;
  margin-block-end: 0.1em !important;
}


/* tabs */
.weui-tabs-bar__title {
  margin: 0px 10px;
  padding-bottom: 5px;
}
