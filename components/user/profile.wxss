@import '/assets/styles/weui.wxss';

.weui-flex {
  position: relative;
}

.profile-header {
  background-color: var(--weui-BG-2);
  padding-bottom: 15px;
}

.profile-avatar {
  width: 100px;
  height: 100px;
}

.profile-avatar .avatar-img {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin: 20px;
  margin-bottom: -7px;
}

.profile-avatar .avatar-decorate {
  position: absolute;
  width: 100px;
  height: 100px;
  margin-bottom: -7px;
}

.profile-name {
  margin-left: 20px;
  margin-top: -10px;
}

.profile-nickname {
  font-size: 20px;
  color: var(--weui-FG-0);
}

.profile-username {
  font-size: 16px;
  color: var(--weui-FG-1);
  margin-left: 10px;
  margin-top: 4px;
}

.profile-verified {
  margin-right: -6px;
}

.profile-verified image {
  height: 20px;
  margin: 0 4px;
  margin-top: 6px;
}

.profile-gender {
  margin-left: 10px;
  margin-top: 8px;
}

.profile-gender-male {
  color: var(--weui-BLUE);
}

.profile-gender-female {
  color: var(--weui-RED);
}

.profile-role-icon image {
  height: 18px;
  margin: 0 4px;
  margin-left: 10px;
  margin-top: 6px;
}

.profile-role-name .weui-badge {
  font-weight: 400;
  background-color: var(--weui-BG-0);
  color: var(--weui-FG-2);
  margin-left: 10px;
  margin-top: 4px;
}

.profile-btn {
  position: absolute;
  top: 36px;
  right: 10px;
}

.profile-bio {
  padding: 10px 20px;
  font-weight: 400;
  font-size: 14px;
}

.profile-verified-desc {
  margin: 0 20px;
}

.profile-verified-desc text {
  padding: 3px 10px;
  border-radius: 10px;
  font-weight: 400;
  font-size: 12px;
  color: var(--weui-FG-HALF);
  background-color: var(--weui-ORANGE);
}

.profile-verified-desc image {
  height: 14px;
}

.profile-extcredits {
  padding: 0px 20px;
}

.extcredits-tag {
  margin-right: 10px;
}

.profile-tab-text {
  font-size: 14px;
  padding-top: 10px;
  color: var(--weui-FG-1);
}

.profile-stats {
  margin: 10px 20px;
}

.profile-followersYouKnow {
  margin: 0 20px;
  font-size: 14px;
  color: var(--weui-FG-1);
}
