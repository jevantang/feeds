@import '/assets/styles/weui.wxss';

.editor-toolbar {
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 999;
  background-color: var(--weui-BG-2);
}

.editor-toolbar .toolbar-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.weui-flex__item {
  text-align: center;
  padding: 10px 0;
}

.weui-tabbar__icon {
  margin-bottom: -2px;
}

/* tabs */
.sticker-box {
  width: 100%;
  border-top: 1px solid var(--weui-FG-3);
}

.stickers {
  padding: 10px 0;
}

.stickers image {
  padding: 10px;
}
