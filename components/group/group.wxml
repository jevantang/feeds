<view class="group-box">
    <t-cell class="custom-cell" title="{{ group.gname }}" image="{{ group.cover }}" bordered="{{ false }}" url="/pages/groups/detail?gid={{ group.gid }}">
        <view slot="description">
            {{ group.postCount }} {{ postName }} <text style="margin: 0 5px;">|</text> {{ group.postDigestCount }} {{ digestName }}
        </view>
        <view slot="note">
            <t-button 
                size="extra-small" 
                icon="{{ group.interaction.followStatus ? 'check' : '' }}" 
                variant="{{ group.interaction.followStatus ? '' : 'outline' }}" 
                content="{{ group.interaction.followName }}" 
                bind:tap="onClickGroupFollow" 
                data-gid="{{ group.gid }}"/>
        </view>
    </t-cell>
    <view class="group-description">
        <view class="description-content" bind:tap="onClickToDetail" data-gid="{{ group.gid }}">
            <text>{{ description }}</text>
        </view>
        <t-divider/>
    </view>
</view>
